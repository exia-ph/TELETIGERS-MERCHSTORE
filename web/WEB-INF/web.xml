<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee          http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">

    <!--Session Time out-->
    <session-config>
        <session-timeout>
            2
        </session-timeout>
    </session-config>
    

    <!--JSPs-->
    <!--Index-->
    <servlet>
        <servlet-name>login</servlet-name>
        <jsp-file>login.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    
    <!--Register-->
    <servlet>
        <servlet-name>register</servlet-name>
        <jsp-file>register.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>register</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>

    <!--Success Pages-->
    <servlet>
        <servlet-name>success</servlet-name>
        <jsp-file>success.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>success</servlet-name>
        <url-pattern>/success</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>successAdmin</servlet-name>
        <jsp-file>successAdmin.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>successAdmin</servlet-name>
        <url-pattern>/successAdmin</url-pattern>
    </servlet-mapping>
    
    <!--Store Page-->
    <servlet>
        <servlet-name>store</servlet-name>
        <jsp-file>store.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>store</servlet-name>
        <url-pattern>/store</url-pattern>
    </servlet-mapping>
    
    <!--Store Page User-->
    <servlet>
        <servlet-name>storeUser</servlet-name>
        <jsp-file>loggedin/storeUser.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>storeUser</servlet-name>
        <url-pattern>/loggedin/storeUser</url-pattern>
    </servlet-mapping>
    
    
    
    <!--Errors Mapping-->
    <!--Authentication Exception-->
    <!--Authentication Exception 1-->
    <servlet>
        <servlet-name>AuthenticationException_1</servlet-name>
        <jsp-file>errors/error_login.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>AuthenticationException_1</servlet-name>
        <url-pattern>/error_login</url-pattern>
    </servlet-mapping>
    
    
    
    <!--Null Value Exception Exception-->
    <servlet>
        <servlet-name>NullValueException</servlet-name>
        <jsp-file>errors/noLoginCredentials.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>NullValueException</servlet-name>
        <url-pattern>/noLoginCredentials</url-pattern>
    </servlet-mapping>
    
    <!--404-->
    <servlet>
        <servlet-name>404</servlet-name>
        <jsp-file>errors/error_404.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>404</servlet-name>
        <url-pattern>/404</url-pattern>
    </servlet-mapping>
    
    <!--Authentication Register-->
    <servlet>
        <servlet-name>Register_Error</servlet-name>
        <jsp-file>errors/error_register.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>Register_Error</servlet-name>
        <url-pattern>/error_register</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>Register_Error_1</servlet-name>
        <jsp-file>errors/error_register_1.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>Register_Error_1</servlet-name>
        <url-pattern>/error_register_1</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>Register_Error_2</servlet-name>
        <jsp-file>errors/error_register_2.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>Register_Error_2</servlet-name>
        <url-pattern>/error_register_2</url-pattern>
    </servlet-mapping>
    
    
    <!--Error Pages-->
    <!-- Login Error JSP-->
    <servlet>
        <servlet-name>error_session</servlet-name>
        <jsp-file>errors/error_session.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>error_session</servlet-name>
        <url-pattern>/error_session</url-pattern>
    </servlet-mapping>
    
    <!--Authentication Exception JSP-->
    <error-page>
        <exception-type>Errors.AuthenticationException_1</exception-type>
        <location>/error_login</location>
    </error-page>
    
    <error-page>
        <exception-type>Errors.Register_Error</exception-type>
        <location>/error_register</location>
    </error-page>
    
    <error-page>
        <exception-type>Errors.Register_Error_1</exception-type>
        <location>/error_register_1</location>
    </error-page>
    
    <error-page>
        <exception-type>Errors.Register_Error_2</exception-type>
        <location>/error_register_2</location>
    </error-page>
    
    
    
    
    <!--Null Value Exception Exception JSP-->
    <error-page>
        <exception-type>Errors.NullValueException</exception-type>
        <location>/noLoginCredentials</location>
    </error-page>
    
    <!--404 JSP-->
    <error-page>
        <error-code>404</error-code>
        <location>/404</location>
    </error-page>
    
    <!--Context Listeners-->
    <listener>
        <listener-class>ContextListeners.UserContextListener</listener-class>
    </listener>
    

    <!--Servlets-->
    <servlet>
        <servlet-name>ServletLogout</servlet-name>
        <servlet-class>checker.ServletLogout</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServletLogout</servlet-name>
